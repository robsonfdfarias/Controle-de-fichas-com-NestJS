generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id Int @id @default(autoincrement())
  matricula String @unique
  @@map("admins")
}

model Ficha {
  id Int @id @default(autoincrement())
  defaultRecord Int
  defaultRecordCall Int
  priorityRecord Int
  priorityRecordCall Int
  dateReg String
  fichaToLocal FichaToLocal[]
  @@map("records")
}

model Local {
  id Int @id @default(autoincrement())
  name String
  address String
  fichaToLocal FichaToLocal[]
  @@map("locais")
}

model FichaToLocal {
  ficha Ficha @relation(fields: [fichaId], references: [id])
  fichaId Int
  local Local @relation(fields: [localId], references: [id])
  localId Int
  @@id([fichaId, localId])
  @@map("ficha_to_local")
}

model Log {
  id Int @id @default(autoincrement())
  matricula String
  action String //Se é um atualização, reset de ficha...
  description String // descrição mais detalhada da ação
  dateAction DateTime @default(now())
  @@map("logs")
}